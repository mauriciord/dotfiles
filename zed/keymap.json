[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle",
      // "ctrl-alt-cmd-c": ["agent::ToggleFocus", "workspace::ToggleRightDock"]
      "ctrl-alt-cmd-c": ["workspace::SendKeystrokes", "cmd-? cmd-alt-b"]
      // "cmd-?": "edit_prediction::ToggleMenu"
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore",
      // "cmd-i": "agent::ToggleFocus"
      // "cmd-?": "edit_prediction::ToggleMenu"
      "ctrl-alt-cmd-c": ["workspace::SendKeystrokes", "cmd-? cmd-alt-b"]
    }
  },
  {
    "context": "GitCommit > Editor",
    "bindings": {
      "alt-c": "git::GenerateCommitMessage"
    }
  },
  {
    "context": "CommitEditor > Editor",
    "bindings": {
      "alt-c": "git::GenerateCommitMessage"
    }
  },
  {
    "context": "(Workspace || Editor)",
    "bindings": {
      "cmd-8": "terminal_panel::Toggle"
    }
  },
  {
    "context": "(Workspace || Editor)",
    "bindings": {
      "cmd-8": "terminal_panel::Toggle"
    }
  }
